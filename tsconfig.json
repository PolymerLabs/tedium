{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "typings/tsd.d.ts",
        "custom_typings/main.d.ts"
    ],
    "files": [
        "cleanup-passes/bower.ts",
        "cleanup-passes/contribution-guide.ts",
        "cleanup-passes/readme.ts",
        "cleanup-passes/tests.ts",
        "cleanup-passes/travis.ts",
        "cleanup-passes/util.ts",
        "cleanup.ts",
        "custom_typings/main.d.ts",
        "element-repo.ts",
        "tedium.ts",
        "typings/js-yaml/js-yaml.d.ts",
        "typings/node/node.d.ts",
        "typings/progress/progress.d.ts",
        "typings/rimraf/rimraf.d.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
