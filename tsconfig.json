{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es2017"
        ],
        "declaration": true,
        "sourceMap": true,
        "pretty": true
    },
    "include": [
        "*.ts",
        "cleanup-passes/*.ts",
        "custom_typings/main.d.ts"
    ]
}
